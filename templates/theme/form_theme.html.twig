{% extends 'bootstrap_5_layout.html.twig' %}
{%- block form_label_content -%}
    {% set label = name %}

    {%- if label_html is same as(false) -%}
        {{- label|trans(label_translation_parameters, 'form_labels') -}}
    {%- else -%}
        {{- label|trans(label_translation_parameters, 'form_labels')|raw -}}
    {%- endif -%}
{%- endblock form_label_content -%}

{% block _devis_form_content_price_row %}
    {{ form_row(form.totalHT, {'attr': {'class': 'form-control js-total-ht'}}) }}
    {{ form_row(form.vat, {'attr': {'class': 'form-control js-vat'}}) }}
    {{ form_row(form.totalTTC, {'attr': {'class': 'form-control js-total-ttc'}}) }}
{% endblock %}

{% block tel_widget %}
    <div class="input-group">
        <span class="input-group-text">+33</span>
        {{ block('form_widget_simple') }}
    </div>
{% endblock %}
