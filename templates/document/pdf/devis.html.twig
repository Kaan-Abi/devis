<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{{ "devis.client"|trans({}, 'documents') }} {{ devis.reference }}</title>
    <style>
        body {
            font-family: DejaVu Sans, sans-serif;
            font-size: 12px;
            padding: 40px;
            color: #333;
        }

        .header {
            text-align: center;
            margin-bottom: 40px;
        }

        h2, h3 {
            margin-bottom: 10px;
            color: #444;
        }

        .flex-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 30px;
        }

        .section {
            margin-bottom: 30px;
        }

        .box {
            border: 1px solid #ccc;
            padding: 15px;
            width: 48%;
            border-radius: 4px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

        .table th {
            background-color: #f8f8f8;
        }

        .table th, .table td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }

        .total {
            font-size: 14px;
            font-weight: bold;
        }

        small {
            color: #777;
        }
    </style>
</head>
<body>

<div class="header">
    <h2>{{ "devis.title"|trans({}, 'documents') }} {{ devis.reference }}</h2>
    <p>{{ "devis.createdAt"|trans({}, 'documents') }} {{ devis.createdAt|date('d/m/Y') }}</p>
</div>

<div class="flex-row">
    <div class="box">
        <h3>{{ "devis.issued_by"|trans({}, 'documents') }}</h3>

        <p><strong>{{ devis.author.name }}</strong></p>
        {% if devis.author.address %}
            <p>{{ devis.author.address }}</p>
        {% endif %}
        {% if devis.author.phone %}
            <p>{{ "devis.phone"|trans({}, 'documents') }} : {{ '+33 ' ~ devis.author.phone }}</p>{% endif %}
        {% if devis.author.email %}
            <p>{{ "devis.email"|trans({}, 'documents') }} : {{ devis.author.email }}</p>{% endif %}
        {% if devis.author.siret %}
            <p>{{ "devis.siret"|trans({}, 'documents') }} : {{ devis.author.siret }}</p>{% endif %}
    </div>

    <div class="box">
        <h3>{{ "devis.client"|trans({}, 'documents') }}</h3>

        <p><strong>{{ devis.client.name }}</strong></p>
        {% if devis.client.address %}<p>{{ devis.client.address }}</p>{% endif %}
        {% if devis.client.phone %}
            <p>{{ "devis.phone"|trans({}, 'documents') }} : {{ devis.client.phone }}</p>{% endif %}
        {% if devis.client.email %}
            <p>{{ "devis.email"|trans({}, 'documents') }} : {{ devis.client.email }}</p>{% endif %}
        {% if devis.client.siret %}<p>{{ "devis.siret"|trans({}, 'documents') }} : {{ devis.client.siret }}</p>{% endif %}
    </div>
</div>

<div class="section">
    <h3>{{ "devis.devis_details"|trans({}, 'documents') }}</h3>
    <table class="table">
        <thead>
        <tr>
            <th>{{ "devis.content_table.description"|trans({}, 'documents') }}</th>
            <th>{{ "devis.content_table.quantity"|trans({}, 'documents') }}</th>
            <th>{{ "devis.content_table.htPrice"|trans({}, 'documents') }}</th>
            <th>{{ "devis.content_table.vat"|trans({}, 'documents') }}</th>
            <th>{{ "devis.content_table.ttcPrice"|trans({}, 'documents') }}</th>
        </tr>
        </thead>
        <tbody>
        {% for item in devis.content %}
            <tr>
                <td>{{ item.description|raw }}</td>
                <td>{{ item.quantity }}</td>
                <td>{{ item.htPrice }} €</td>
                <td>{{ item.vat }} %</td>
                <td>{{ item.ttcPrice }} €</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

<div class="section">
    <p class="total">{{ "devis.totalHT"|trans({}, 'documents') }} : {{ devis.totalHT }} €</p>
    <p class="total">{{ "devis.totalTTC"|trans({}, 'documents') }} : {{ devis.totalTTC }} €</p>
</div>

{% if devis.additionalNote %}
    <div class="section">
        <h3>{{ "devis.note"|trans({}, 'documents') }}</h3>
        <p>{{ devis.additionalNote|raw }}</p>
    </div>
{% endif %}

<div class="section">

    {{ "devis.created_by"|trans({}, 'documents') }} <p><small>{{ devis.author.name }}</small></p>
</div>

</body>
</html>

