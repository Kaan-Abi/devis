<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title>{{ "devis.client"|trans({}, 'documents') }} {{ devis.reference }}</title>
    <style>
        body {
            font-family: "DejaVu Sans", Arial, sans-serif;
            font-size: 12px;
            padding: 20px;
            color: #333;
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        h2, h3 {
            margin-bottom: 10px;
            color: #444;
        }

        .row {
            display: table;
            width: 100%;
            table-layout: fixed;
            margin-bottom: 30px;
        }

        .cell {
            display: table-cell;
            vertical-align: top;
            width: 50%;
            border: 1px solid #ccc;
            padding: 15px;
        }

        .cell + .cell {
            padding-left: 20px;
        }

        .section {
            margin-bottom: 30px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            font-size: 12px;
        }

        .table th, .table td {
            border: 1px solid #000;
            padding: 6px;
            text-align: left;
        }

        .table th {
            background-color: #eee;
        }

        .total {
            font-size: 14px;
            font-weight: bold;
        }

        small {
            color: #777;
        }
    </style>
</head>
<body>
<div class="header">
    <h2>{{ "devis.title"|trans({}, 'documents') }} {{ devis.reference }}</h2>
    <p>{{ "devis.createdAt"|trans({}, 'documents') }} {{ devis.createdAt|date('d/m/Y') }}</p>
</div>

<div class="row">
    <div class="cell">
        <h3>{{ "devis.issued_by"|trans({}, 'documents') }}</h3>

        <p><strong>{{ devis.author.name }}</strong></p>
        {% if devis.author.address %}

            <p>{{ devis.author.address }}</p>
        {% endif %}
        {% if devis.author.phone %}

            <p>{{ "devis.phone"|trans({}, 'documents') }} : {{ '+33 ' ~ devis.author.phone }}</p>
        {% endif %}
        {% if devis.author.email %}

            <p>{{ "devis.email"|trans({}, 'documents') }} : {{ devis.author.email }}</p>
        {% endif %}
        {% if devis.author.siret %}

            <p>{{ "devis.siret"|trans({}, 'documents') }} : {{ devis.author.siret }}</p>
        {% endif %}
    </div>
    <div class="cell">
        <h3>{{ "devis.client"|trans({}, 'documents') }}</h3>

        <p><strong>{{ devis.client.name }}</strong></p>
        {% if devis.client.address %}
            <p>{{ devis.client.address }}</p>
        {% endif %}
        {% if devis.client.phone %}

            <p>{{ "devis.phone"|trans({}, 'documents') }} : {{ '+33 ' ~ devis.client.phone }}</p>
        {% endif %}
        {% if devis.client.email %}

            <p>{{ "devis.email"|trans({}, 'documents') }} : {{ devis.client.email }}</p>
        {% endif %}
        {% if devis.client.siret %}
            <p>{{ "devis.siret"|trans({}, 'documents') }} : {{ devis.client.siret }}</p>
        {% endif %}
    </div>
</div>

<div class="section">
    <h3>{{ "devis.devis_details"|trans({}, 'documents') }}</h3>
    <table class="table">
        <thead>
        <tr>
            <th>{{ "devis.content_table.description"|trans({}, 'documents') }}</th>
            <th>{{ "devis.content_table.quantity"|trans({}, 'documents') }}</th>
            <th>{{ "devis.content_table.htPrice"|trans({}, 'documents') }}</th>
            <th>{{ "devis.content_table.vat"|trans({}, 'documents') }}</th>
            <th>{{ "devis.content_table.ttcPrice"|trans({}, 'documents') }}</th>
        </tr>
        </thead>
        <tbody>
        {% for item in devis.content %}
            <tr>
                <td>{{ item.description|raw }}</td>
                <td>{{ item.quantity }}</td>
                <td>{{ item.htPrice }} €</td>
                <td>{{ item.vat * 100}} %</td>
                <td>{{ item.ttcPrice }} €</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

<div class="section">
    <p class="total">{{ "devis.totalHT"|trans({}, 'documents') }} : {{ devis.totalHT }} €</p>
    <p class="total">{{ "devis.totalTTC"|trans({}, 'documents') }} : {{ devis.totalTTC }} €</p>
</div>

{% if devis.additionalNote %}
    <div class="section">
        <h3>{{ "devis.note"|trans({}, 'documents') }}</h3>
        <p>{{ devis.additionalNote|raw }}</p>
    </div>
{% endif %}

<div class="section">
    {{ "devis.created_by"|trans({}, 'documents') }}

    <p><small>{{ devis.author.name }}</small></p>
</div>
</body>
</html>
