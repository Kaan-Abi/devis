{% extends 'base.html.twig' %}

{% block tab_title %}{{ "register"|trans({},'interface') }}{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>{{ "register"|trans({},'interface') }}</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.name) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.phone) }}
        {{ form_row(registrationForm.siret) }}
        {{ form_row(registrationForm.address) }}
        {{ form_row(registrationForm.plainPassword) }}

        <button type="submit" class="btn btn-primary">{{ "register"|trans({},'interface') }}</button>
    {{ form_end(registrationForm) }}
{% endblock %}
