{% extends 'base.html.twig' %}

{% block title %}{{ "client.index.title"|trans({}, 'interface') }}{% endblock %}
{% block tab_title %}{{ "client.index.title"|trans({}, 'interface') }}{% endblock %}

{% block body %}
    <a class="btn btn-primary" href="{{ path('app_client_new') }}">
        <i class="fas fa-plus"></i>
        {{ "client.index.create_new"|trans({}, 'interface') }}
    </a>

    <table class="table">
        <thead>
            <tr>
                <th>{{ "client.index.table.header.name"|trans({}, 'interface') }}</th>
                <th>{{ "client.index.table.header.phone"|trans({}, 'interface') }}</th>
                <th>{{ "client.index.table.header.email"|trans({}, 'interface') }}</th>
                <th>{{ "client.index.table.header.address"|trans({}, 'interface') }}</th>
                <th>{{ "client.index.table.header.actions"|trans({}, 'interface') }}</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.name }}</td>
                <td>{{ client.phone }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.address }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('app_client_edit', {'id': client.id}) }}">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">
                    {{ "table.no_results"|trans({}, 'interface') }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
